        <a
          href="mailto:alex@zolotarov.email"
          class="text-blue-500 hover:underline"
        >
          alex@zolotarov.email
        </a>
      </p>

      <div>
        <p class="font-semibold">Follow me on</p>

        <ul class="mt-2 space-y-2">
          <li>
            üêô <span class="font-semibold">GitHub:</span>
            <a
              href="https://github.com/webgtx"
              target="_blank"
              class="text-blue-500 hover:underline"
            >
              webgtx
            </a>
          </li>

          <li>
            üíº <span class="font-semibold">LinkedIn:</span>
            <a
              href="https://www.linkedin.com/in/alxzolotarov"
              target="_blank"
              class="text-blue-500 hover:underline"
            >
              alxzolotarov
            </a>
          </li>
        </ul>
      </div>
    </section>

    <!-- Tags -->
    <ul class="flex flex-wrap gap-6">
      {tags.map(({ tag, tagName }) => (
